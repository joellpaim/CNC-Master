<TelaInsertos>
    name: "TelaInsertos"

    MDGridLayout:
        cols: 1
        md_bg_color: 0.5, 0.5, 0.5, 0.7

        MDToolbar:
            title: "Torneamento"
            opposite_colors: False
            md_bg_color: app.theme_cls.primary_color
            elevation: 20
            left_action_items: [["arrow-left", lambda x: root.voltar_tela_inicial()]]


        MDBoxLayout:
            orientation: "vertical"
            padding: "10dp"
            pos_hint: {"top": 1}
            radius: 25, 10, 25, 10

            ScrollView:

                MDGridLayout:
                    adaptive_height: True
                    pos_hint: {"top": 1}
                    cols: 1
                    padding: "25dp"
                    spacing: "15dp"
                    md_bg_color: app.theme_cls.primary_color
                    radius: 25, 10, 25, 10

                    MDRaisedButton:
                        text: "Velocidade de Corte"
                        font_size: "20sp"
                        elevation: 10
                        size_hint_x: 0.8
                        md_bg_color: 0.4, 0.4, 0.4, 1
                        on_release: root.manager.set_current('TelaVCT')

                    MDRaisedButton:
                        text: "Velocidade do Fuso"
                        font_size: "20sp"
                        elevation: 10
                        size_hint_x: 0.8
                        md_bg_color: 0.4, 0.4, 0.4, 1
                        on_release: root.manager.set_current('TelaVelFusoT')

                    MDRaisedButton:
                        text: "Taxa de Remoção de Metal"
                        font_size: "20sp"
                        elevation: 10
                        size_hint_x: 0.8
                        md_bg_color: 0.4, 0.4, 0.4, 1
                        on_release: root.manager.set_current('TelaTaxaRemocaoT')

                    MDRaisedButton:
                        text: "Potência Líquida"
                        font_size: "20sp"
                        elevation: 10
                        size_hint_x: 0.8
                        md_bg_color: 0.4, 0.4, 0.4, 1
                        on_release: root.manager.set_current('TelaPotenciaLiquidaT')

                    MDRaisedButton:
                        text: "Tempo de Usinagem"
                        font_size: "20sp"
                        elevation: 10
                        size_hint_x: 0.8
                        md_bg_color: 0.4, 0.4, 0.4, 1
                        on_release: root.manager.set_current('TelaTempoT')

</TelaInsertos>