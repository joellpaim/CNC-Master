<TelaMachos>
    name: "TelaMachos"
    md_bg_color: app.theme_cls.primary_color

    MDToolbar:
        title: "Machos"
        specific_text_color: [1, 1, 1, 1]
        pos_hint: {"top": 1}
        elevation: 20
        left_action_items: [["menu", "TelaInicial"]]
        right_action_items: [["dots-vertical", lambda x: app.calcular()]]

    MDGridLayout:
        pos_hint: {'center_x': 0.5, 'center_y': 0.6}
        size_hint: 0.8, 0.5
        rows: 2
        spacing: 25

        MDBoxLayout:
            size_hint: 0.95, 0.8
            radius: [10, 10, 10, 10]
            md_bg_color: 1, 1, 1, 1

            MDGridLayout:
                cols: 2
                spacing: 15
                padding: 15

                MDTextField:
                    id: dm
                    hint_text: "Diâmetro do Macho"
                    text: ""
                    required: False
                    helper_text: "Necessário para VC e RPM"
                    mode: "fill"
                    input_filter: "float"
                    pos_hint: {'center_x': 0.5, 'center_y': 0.9}
                    size_hint_x: 0.8
                    radius: 10, 10, 10, 10
                    color_mode: 'custom'
                    line_color_focus: 0, 0.7, 1, 1

                MDTextField:
                    id: dm
                    hint_text: "Passo da Rosca"
                    text: ""
                    required: False
                    helper_text: "Necessário para VC e RPM"
                    mode: "fill"
                    input_filter: "float"
                    pos_hint: {'center_x': 0.5, 'center_y': 0.78}
                    size_hint_x: 0.8
                    radius: 10, 10, 10, 10
                    color_mode: 'custom'
                    line_color_focus: 0, 0.7, 1, 1

                MDTextField:
                    id: vc
                    hint_text: "Velocidade de Corte"
                    text: ""
                    mode: "fill"
                    input_filter: "float"
                    pos_hint: {'center_x': 0.5, 'center_y': 0.66}
                    size_hint_x: 0.8
                    radius: 10, 10, 10, 10
                    color_mode: 'custom'
                    line_color_focus: 0, 0.7, 1, 1

                MDTextField:
                    id: ve
                    hint_text: "Velocidade do Eixo"
                    required: False
                    helper_text: "Necessário para avanços"
                    mode: "fill"
                    input_filter: "float"
                    pos_hint: {'center_x': 0.5, 'center_y': 0.54}
                    size_hint_x: 0.8
                    radius: 10, 10, 10, 10
                    color_mode: 'custom'
                    line_color_focus: 0, 0.7, 1, 1

                MDTextField:
                    id: avre
                    hint_text: "Avanço/Rev"
                    text: ""
                    mode: "fill"
                    input_filter: "float"
                    pos_hint: {'center_x': 0.5, 'center_y': 0.42}
                    size_hint_x: 0.8
                    radius: 10, 10, 10, 10
                    color_mode: 'custom'
                    line_color_focus: 0, 0.7, 1, 1

                MDTextField:
                    id: av
                    hint_text: "Avanço"
                    text: ""
                    mode: "fill"
                    input_filter: "float"
                    pos_hint: {'center_x': 0.5, 'center_y': 0.3}
                    size_hint_x: 0.8
                    radius: 10, 10, 10, 10
                    color_mode: 'custom'
                    line_color_focus: 0, 0.7, 1, 1

    MDBoxLayout:
        pos_hint: {'center_x': 0.47, 'center_y': 0.37}

        MDGridLayout:
            cols: 3
            spacing: 10
            padding: 40
            pos_hint: {'center_x': 0.5, 'center_y': 0.1}

            MDRaisedButton:
                text: "[color=#ffffff]Voltar[/color]"
                on_press:
                    root.manager.transition.direction = "right"
                    root.manager.current = "TelaInicial"

            MDRaisedButton:
                text: "[color=#ffffff]Limpar[/color]"

            MDRaisedButton:
                text: "[color=#ffffff]Calcular[/color]"


