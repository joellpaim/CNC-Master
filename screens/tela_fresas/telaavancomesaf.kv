<TelaAvancoMesaF>
    name: 'TelaAvancoMesaF'

    MDGridLayout:
        cols: 1
        md_bg_color: 0.5, 0.5, 0.5, 0.7

        MDToolbar:
            title: "Avanço da Mesa"
            opposite_colors: False
            md_bg_color: app.theme_cls.primary_color
            elevation: 20
            left_action_items: [["arrow-left", lambda x: root.voltar_tela_fresas()]]


        MDBoxLayout:
            orientation: "vertical"
            padding: "10dp"
            pos_hint: {"top": 1}
            radius: 25, 10, 25, 10

            ScrollView:

                MDGridLayout:
                    adaptive_height: True
                    pos_hint: {"top": 1}
                    cols: 1
                    padding: "25dp"
                    spacing: "35dp"
                    md_bg_color: app.theme_cls.primary_color
                    radius: 25, 10, 25, 10


                    MDTextField:
                        id: fz
                        hint_text: "Avanço por Dente"
                        text: ""
                        font_size: '30sp'
                        line_color_focus: app.theme_cls.primary_color
                        fill_color_normal: 1, 1, 1, 0.2
                        fill_color_focus: 1, 1, 1, 0.7
                        hint_text_color_focus: 0, 0, 0, 1
                        hint_text_color_normal: 0, 0, 0, 0.7
                        required: False
                        mode: "fill"
                        input_filter: "float"
                        input_type: 'number'
                        radius: 25, 10, 25, 10
                        on_text: root.calcular()

                    MDTextField:
                        id: n
                        hint_text: "Velocidade do Fuso"
                        text: ""
                        font_size: '30sp'
                        line_color_focus: app.theme_cls.primary_color
                        fill_color_normal: 1, 1, 1, 0.2
                        fill_color_focus: 1, 1, 1, 0.7
                        hint_text_color_focus: 0, 0, 0, 1
                        hint_text_color_normal: 0, 0, 0, 0.7
                        required: False
                        mode: "fill"
                        input_filter: "float"
                        input_type: 'number'
                        radius: 25, 10, 25, 10
                        on_text: root.calcular()

                    MDTextField:
                        id: zeff
                        hint_text: "Numero de Dentes"
                        text: ""
                        font_size: '30sp'
                        line_color_focus: app.theme_cls.primary_color
                        fill_color_normal: 1, 1, 1, 0.2
                        fill_color_focus: 1, 1, 1, 0.7
                        hint_text_color_focus: 0, 0, 0, 1
                        hint_text_color_normal: 0, 0, 0, 0.7
                        required: False
                        mode: "fill"
                        input_filter: "float"
                        input_type: 'number'
                        radius: 25, 10, 25, 10
                        on_text: root.calcular()

                    MDSeparator:

                    MDLabel:
                        id: resultado
                        text: "0 mm/min"
                        font_style: "H4"
                        halign: "center"

                    MDSeparator:

            MDBoxLayout:
                size_hint: 0.95, 0.5



</TelaAvancoMesaF>