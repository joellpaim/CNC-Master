<TelaInicial>
    name: 'TelaInicial'
    md_bg_color: app.theme_cls.primary_color

    MDToolbar:
        title: "CNC Master"
        specific_text_color: [1, 1, 1, 1]
        pos_hint: {"top": 1}
        elevation: 10
        right_action_items: [["dots-vertical", lambda x: app.em_breve()]]

    MDBoxLayout:
        pos_hint: {'center_x': 0.5, 'center_y': 0.58}
        size_hint: 0.95, 0.5
        radius: [10, 100, 10, 10]
        md_bg_color: 1, 1, 1, 1


        MDGridLayout:
            pos_hint: {"top": 0.95}
            size_hint: 0.5, 0.9
            cols: 2
            spacing: 15
            padding: 25


            MDRaisedButton:
                text: "[color=#ffffff]Furação[/color]"
                pos_hint: {'center_x': 0.5, 'center_y': 0.95}
                size_hint_x: 0.8
                size_hint_y: 0.05
                elevation: 10
                on_release:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'TelaBrocas'

            MDRaisedButton:
                text: "[color=#ffffff]Rosqueamento[/color]"
                pos_hint: {'center_x': 0.5, 'center_y': 0.8}
                size_hint_x: 0.8
                size_hint_y: 0.05
                elevation: 10
                on_release:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'TelaMachos'

            MDRaisedButton:
                text: "[color=#ffffff]Torneamento[/color]"
                bold: True
                pos_hint: {'center_x': 0.5, 'center_y': 0.65}
                size_hint_x: 0.8
                size_hint_y: 0.05
                elevation: 10
                on_release:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'TelaInsertos'

            MDRaisedButton:
                text: "[color=#ffffff]Fresamento[/color]"
                bold: True
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                size_hint_x: 0.8
                size_hint_y: 0.05
                elevation: 10
                on_release: app.em_breve()

            MDRaisedButton:
                text: "[color=#ffffff]Rugosidade[/color]"
                bold: True
                pos_hint: {'center_x': 0.5, 'center_y': 0.35}
                size_hint_x: 0.8
                size_hint_y: 0.05
                elevation: 10
                on_release: app.em_breve()

            MDRaisedButton:
                text: "[color=#ffffff]Mandrilamento[/color]"
                bold: True
                pos_hint: {'center_x': 0.5, 'center_y': 0.2}
                size_hint_x: 0.8
                size_hint_y: 0.05
                elevation: 10
                on_release: app.em_breve()

            MDRaisedButton:
                text: "[color=#ffffff]Mostrar[/color]"
                bold: True
                pos_hint: {'center_x': 0.5, 'center_y': 0.2}
                size_hint_x: 0.8
                size_hint_y: 0.05
                elevation: 10
                on_release: root.call()

            MDRaisedButton:
                text: "[color=#ffffff]Esconder[/color]"
                bold: True
                pos_hint: {'center_x': 0.5, 'center_y': 0.2}
                size_hint_x: 0.8
                size_hint_y: 0.05
                elevation: 10
                on_release: root.call2()

        
 
            
            
            
                        
    
                        
                    