<TelaInicial>
    name: 'TelaInicial'
    md_bg_color: app.theme_cls.primary_color

    MDToolbar:
        title: "CNC Master"
        specific_text_color: [1, 1, 1, 1]
        pos_hint: {"top": 1}
        elevation: 10
        right_action_items: [["dots-vertical", lambda x: app.calcular()]]

    MDBoxLayout:
        pos_hint: {'center_x': 0.5, 'center_y': 0.48}
        size_hint: 0.95, 0.8
        radius: [10, 10, 10, 10]
        md_bg_color: 1, 1, 1, .35


        MDGridLayout:
            pos_hint: {"top": 0.95}
            size_hint: 0.5, 0.9
            cols: 2
            spacing: 5
            padding: 5


            MDRaisedButton:
                text: "[color=#ffffff]Furação[/color]"
                pos_hint: {'center_x': 0.5, 'center_y': 0.95}
                size_hint_x: 0.8
                size_hint_y: 0.05
                elevation: 10
                on_press:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'TelaBrocas'

            MDRaisedButton:
                text: "[color=#ffffff]Machos[/color]"
                pos_hint: {'center_x': 0.5, 'center_y': 0.8}
                size_hint_x: 0.8
                size_hint_y: 0.05
                elevation: 10
                on_press:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'TelaMachos'

            MDRaisedButton:
                text: "[color=#ffffff]Torneamento[/color]"
                bold: True
                pos_hint: {'center_x': 0.5, 'center_y': 0.65}
                size_hint_x: 0.8
                size_hint_y: 0.05
                elevation: 10
                on_press:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'TelaInsertos'

            MDRaisedButton:
                text: "[color=#ffffff]Fresamento[/color]"
                bold: True
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                size_hint_x: 0.8
                size_hint_y: 0.05
                elevation: 10

            MDRaisedButton:
                text: "[color=#ffffff]Rugosidade[/color]"
                bold: True
                pos_hint: {'center_x': 0.5, 'center_y': 0.35}
                size_hint_x: 0.8
                size_hint_y: 0.05
                elevation: 10

            MDRaisedButton:
                text: "[color=#ffffff]Tempo de corte[/color]"
                bold: True
                pos_hint: {'center_x': 0.5, 'center_y': 0.2}
                size_hint_x: 0.8
                size_hint_y: 0.05
                elevation: 10

        
 
            
            
            
                        
    
                        
                    